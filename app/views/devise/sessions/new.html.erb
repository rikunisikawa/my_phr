<div class="login-container">
  <div class="login-card card shadow-sm rounded p-3">
    <h2><%= t 'devise.sessions.new.log_in' %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email, class: "form-label", :for => "user_email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label", :for => "user_password" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, t('devise.shared.links.remember_me'), class: "form-check-label", :for => "user_remember_me" %>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('devise.sessions.new.log_in'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
