<h1>Profiles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>誕生日</th>
      <th>身長 cm</th>
      <th>体重 kg</th>
      <th>カスタムフィールド</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.birth_date %></td>
        <td><%= profile.height_cm %></td>
        <td><%= profile.weight_kg %></td>
        <td><%= profile.custom_fields %></td>
        <td><%= link_to 'Show', profile, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, class: 'btn btn-primary' %>
