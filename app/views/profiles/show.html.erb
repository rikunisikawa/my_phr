<div class="container">
  <h1>プロフィール</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">ユーザーID: <%= @profile.user_id %></h5>
      <p class="card-text">生年月日: <%= @profile.birth_date %></p>
      <p class="card-text">身長 cm: <%= @profile.height_cm %></p>
      <p class="card-text">体重 kg: <%= @profile.weight_kg %></p>
      <p class="card-text">カスタムフィールド: <%= @profile.custom_fields %></p>
      <%= link_to '編集', edit_profile_path(@profile), class: 'btn btn-primary' %>
      <%= link_to '戻る', profiles_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
