<div class="card shadow-sm">
  <div class="card-header">
    <h2 class="h5 mb-0">基本情報を編集</h2>
  </div>
  <div class="card-body">
    <% if @profile.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= render "form" %>
  </div>
</div>
